<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Ishara.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/lightBlue</item>
        <item name="colorSecondary">@color/orange</item>
        <item name="colorTertiary">@color/darkBlue</item>
    </style>

    <style name="Base.Theme.Ishara.ActionBar" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/lightBlue</item>
        <item name="colorSecondary">@color/orange</item>
        <item name="colorTertiary">@color/darkBlue</item>
    </style>

    <style name="CustomToolbar" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/sora_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomToolbar.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/sora_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomBottomNavbar.Item" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/sora_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/orange</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
    </style>

    <style name="Theme.App.BottomNavigationActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/lightOrange</item>
    </style>

    <style name="Theme.Ishara.NoActionBar" parent="Base.Theme.Ishara.NoActionBar" />

    <style name="Theme.Ishara.ActionBar" parent="Base.Theme.Ishara.ActionBar" />
</resources>